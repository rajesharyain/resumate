{
  "name": "resumate",
  "version": "1.0.0",
  "description": "AI-Powered Resume Converter - Production Ready MVP",
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "cd backend && python -m uvicorn main:app --reload --host 0.0.0.0 --port 8000",
    "dev:frontend": "cd frontend && npm run dev",
    "build": "npm run build:frontend",
    "build:frontend": "cd frontend && npm run build",
    "start": "concurrently \"npm run start:backend\" \"npm run start:frontend\"",
    "start:backend": "cd backend && python -m uvicorn main:app --host 0.0.0.0 --port 8000",
    "start:frontend": "cd frontend && npm start",
    "install:all": "npm install && cd frontend && npm install",
    "setup": "npm run install:all && echo 'Setup complete! Copy .env.example files and configure environment variables.'"
  },
  "keywords": [
    "resume",
    "ai",
    "converter",
    "ats"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}

